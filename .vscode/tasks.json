{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "pytest-quick",
			"type": "shell",
			"command": "${config:python.defaultInterpreterPath}",
			"args": [
				"-m",
				"pytest",
				"-q"
			],
			"group": "build",
			"problemMatcher": [
				"$python"
			]
		},
		{
			"label": "pytest-units",
			"type": "shell",
			"command": "${config:python.defaultInterpreterPath}",
			"args": [
				"-m",
				"pytest",
				"-v",
				"tests"
			],
			"group": "build",
			"problemMatcher": [
				"$python"
			]
		},
		{
			"label": "ruff-check",
			"type": "shell",
			"command": "${config:python.defaultInterpreterPath}",
			"args": [
				"-m",
				"ruff",
				"check",
				"src",
				"tests"
			],
			"problemMatcher": [
				"$python"
			],
			"group": "build"
		},
		{
			"label": "ruff-fix",
			"type": "shell",
			"command": "${config:python.defaultInterpreterPath}",
			"args": [
				"-m",
				"ruff",
				"check",
				"--fix",
				"src",
				"tests"
			],
			"problemMatcher": [
				"$python"
			],
			"group": "build"
		},
		{
			"label": "ruff-format",
			"type": "shell",
			"command": "${config:python.defaultInterpreterPath}",
			"args": [
				"-m",
				"ruff",
				"format",
				"src",
				"tests"
			],
			"problemMatcher": [
				"$python"
			],
			"group": "build"
		},
	]
}
